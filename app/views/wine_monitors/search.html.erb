<h1>搜索 <%= params[:q] %> 第<%= params[:page] || 1 %>页</h1>
<div class="tabbable">
  <%= render_cell :wine_monitors, :tags, args: params %>
  <table class="table table-striped table-hover sortable">
    <thead>
      <tr>
        <th>标题</th>
        <th class="sort" data-column="current_price">
          现价
          <span class="sign <%= params[:sort].match(/asc/) ? 'reversed' : 'reversed up'  if params[:sort] and params[:sort].match(/current_price_/) %>"></span>
        </th>
        <th class="sort" data-column="min_price">
          最低价
          <span class="sign <%= params[:sort].match(/asc/) ? 'reversed' : 'reversed up'  if params[:sort] and params[:sort].match(/min_price_/) %>"></span>
        </th>
        <!--
        <th class="sort" data-column="price_per_liter">
          <span class="sign <%= params[:sort].match(/asc/) ? 'reversed' : 'reversed up'  if params[:sort] and params[:sort].match(/price_per_liter_/) %>"></span>
          <span>升均价</span>
        </th>
        -->
        <th>促销活动</th>
        <th>更新时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @wine_monitors.each do |wine_monitor| %>
        <tr>
          <td><%= link_to highlight(wine_monitor.name.try(:html_safe), @keys), wine_monitor,target: '_blank', title: wine_monitor.name.try(:html_safe) %></td>
          <td><%= wine_monitor.current_price %></td>
          <td><%= wine_monitor.min_price %></td>
          <!--
          <td><%= wine_monitor.price_per_liter %></td>
          -->
          <td><%= wine_monitor.event_string.try(:block,30) %></td>
          <td><%= wine_monitor.updated_at.cc_time %></td>
          <td>
            <%= link_to '直接访问', go_path(id: wine_monitor.sn, lib: wine_monitor.lib), class: 'btn btn-primary', target: '_blank', rel: 'external nofollow' %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>
  <div class="pull-right">
    <%= paginate @wine_monitors %>
  </div>
</div>
