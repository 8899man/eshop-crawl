<h1>酒监视器列表</h1>
<div class="tabbable">
  <%= render_cell :wine_monitors, :categories, category: @category, class: WineMonitor %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>标题</th>
        <th>规格</th>
        <th>现价</th>
        <th>最低价</th>
        <th>每升均价</th>
        <th>促销活动</th>
        <th>更新时间</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'wine_monitors/trs' %>
    </tbody>
  </table>
  <div class="pull-right">
    <%= paginate @wine_monitors %>
  </div>
</div>

