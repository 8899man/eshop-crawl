<%= simple_form_for(@wine) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :introduction %>
    <%= f.input :description %>
    <%= f.input :min_price %>
    <%= f.input :current_price %>
    <%= f.input :fit_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
