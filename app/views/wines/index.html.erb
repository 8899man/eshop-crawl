<h1>Listing wines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Introduction</th>
    <th>Description</th>
    <th>Min price</th>
    <th>Current price</th>
    <th>Min starting price</th>
    <th>Max starting price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wines.each do |wine| %>
  <tr>
    <td><%= wine.name %></td>
    <td><%= wine.introduction %></td>
    <td><%= wine.description %></td>
    <td><%= wine.min_price %></td>
    <td><%= wine.current_price %></td>
    <td><%= wine.min_starting_price %></td>
    <td><%= wine.max_starting_price %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
    <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

