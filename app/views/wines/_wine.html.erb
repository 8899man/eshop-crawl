<div class="list-div" data-time="<%= wine.updated_at.to_i %>">
  <div class="pull-left">
    <%= link_to wine, title: wine.name do %>
      <%= upload_image_tag wine.image, wine.name, :list %>
    <% end %>
  </div>
  <div class="pull-left list-detail"> <%=link_to wine.name.try(:block,150), wine,target: '_blank', title: wine.name %>
    <br />
    <p><b>现价</b>：<%= wine.current_price %></p>
    <p><b>最低价</b>：<%= wine.min_price %></p>
    <p><%= wine.introduction || wine.description.try(:block,150) %></p>
  </div>
  <div class="clearfix"></div>
</div>

